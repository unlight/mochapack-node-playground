{
  "name": "mochapack-node-playground",
  "description": "Playing with mochapack",
  "private": true,
  "version": "0.0.0-dev",
  "keywords": [
    "mochapack",
    "mocha",
    "webpack"
  ],
  "workspaces": [
    "workspace_lib"
  ],
  "license": "MIT",
  "type": "commonjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx pkgroll --target=es2020",
    "eslint": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint:w": "watchexec -w src \"npm run eslint\"",
    "prebuild": "rm -rf dist",
    "test": "npm run eslint && npm run test:r -- -R spec",
    "test:r": "instant-mocha \"src/*.spec.ts\" --webpack-config=webpack.config.cjs -R dot",
    "test:w": "npm run test:r -- -w",
    "tscheck": "tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch"
  },
  "devDependencies": {
    "@swc/core": "^1.7.28",
    "@swc/helpers": "^0.5.13",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "expect": "^29.7.0",
    "instant-mocha": "^1.5.2",
    "mocha": "9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "request": "^2.88.2",
    "swc-loader": "^0.2.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "watchexec-bin": "^1.0.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "workspace-alias": "^0.1.0"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "homepage": "https://github.com/unlight/mochapack-node-playground#readme",
  "bugs": {
    "url": "https://github.com/unlight/mochapack-node-playground/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unlight/mochapack-node-playground.git"
  }
}
